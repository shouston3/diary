{
  "description": "diary boilerplate",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run build:js && npm run build:elm && npm run build:css && npm run build:static",
    "build:js": "rollup -c rollup.config.js",
    "build:elm": "./elm.build.sh",
    "build:css": "sass css/main.scss:../priv/static/css/app.css",
    "build:static": "cp -R static/* ../priv/static",
    "build:watch": "nodemon -x 'npm run build' -e js,elm,css,png,svg",
    "build:js:watch": "rollup -c rollup.config.js -w",
    "build:elm:watch": "elm-live elm/Home.elm --pushstate --output=../priv/static/js/elm.js",
    "build:css:watch": "sass --watch css/main.scss:../priv/static/css/app.css",
    "build:static:watch": "nodemon -e png,svg -x 'npm run build:static' -w static",
    "test": "echo \"no tests yet!\""
  },
  "dependencies": {
    "rollup": "^0.53.2",
    "tachyons-sass": "^4.9.2"
  },
  "devDependencies": {
    "elm-live": "^2.7.5",
    "nodemon": "^1.14.7"
  }
}
